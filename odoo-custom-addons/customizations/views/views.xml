<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="customizations.list">
      <field name="name">Penalties</field>
      <field name="model">customizations.penalties</field>
      <field name="arch" type="xml">
        <tree>
          <field name="employee_id"/>
       
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="customizations.action_window">
      <field name="name">customizations window</field>
      <field name="res_model">customizations.penalties</field>
      <field name="view_mode">tree,form</field>
    </record>
    <!-- server action to the one above -->

    <record model="ir.actions.server" id="customizations.action_server">
      <field name="name">customizations server</field>
      <field name="model_id" ref="model_customizations_penalties"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="customizations" id="customizations.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Menu 1" id="customizations.menu_1" parent="customizations.menu_root"/>
    <menuitem name="Menu 2" id="customizations.menu_2" parent="customizations.menu_root"/>
    <!-- actions -->
    <menuitem name="List" id="customizations.menu_1_list" parent="customizations.menu_1"
              action="customizations.action_window"/>
    <menuitem name="Server to list" id="customizations" parent="customizations.menu_2"
              action="customizations.action_server"/>
  </data>
</odoo>